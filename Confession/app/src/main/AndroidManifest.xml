<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.confession">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Confession">

        <activity android:name=".views.CreateGroupActivity"></activity>
        <activity android:name=".views.CoverActivity" />
        <activity android:name=".views.CommentActivity" />
        <activity android:name=".views.SignUpActivity" />
        <activity android:name=".views.ForgotPasswordActivity" />
        <activity android:name=".views.HomePageActivity">

        <activity
            android:name=".views.SignInActivity"
            android:noHistory="true"></activity>
            
        <activity
            android:name=".views.MainActivity"
            android:noHistory="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

    </application>

</manifest>